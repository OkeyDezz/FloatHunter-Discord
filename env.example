# Configurações do Opportunity Bot
# Copie este arquivo para .env e preencha com suas credenciais

# CSGOEmpire API
CSGOEMPIRE_API_KEY=sua_api_key_do_csgoempire_aqui

# Discord Bot
DISCORD_TOKEN=seu_token_do_bot_discord_aqui
CSGOEMPIRE_CHANNEL_ID=123456789

# Supabase (Database) - OBRIGATÓRIO
# O bot usa as tabelas existentes:
# 
# Tabela 'market_data' com colunas:
# - item_key: Chave única do item
# - price_buff163: Preço do Buff163 em dólar
#
# Tabela 'liquidity' com colunas:
# - item_key: Chave única do item
# - liquidity_score: Score de liquidez (0 a 100)
#
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua_chave_anonima_do_supabase_aqui
SUPABASE_SERVICE_ROLE_KEY=sua_chave_service_role_do_supabase_aqui

# Filtros de Oportunidades
MIN_PROFIT_PERCENTAGE=5.0
MIN_LIQUIDITY_SCORE=70.0
MIN_PRICE=1.0
MAX_PRICE=1000.0

# Fator de conversão coin para dólar (CSGOEmpire)
COIN_TO_USD_FACTOR=0.614

# Configurações de Operação
SCAN_INTERVAL_SECONDS=30
WEBSOCKET_RECONNECT_DELAY=5

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=false
